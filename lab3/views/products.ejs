    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 40px auto;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
        }

        .btn-add {
            display: inline-block;
            margin-bottom: 25px;
            text-decoration: none;
            background: #4CAF50;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: bold;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            justify-content: center;
        }

        .product-card {
            background: #fff;
            border-radius: 14px;
            padding: 15px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        .product-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 10px;
        }

        .product-card h3 {
            font-size: 18px;
            margin: 10px 0;
        }

        .price {
            color: #e53935;
            font-weight: bold;
            font-size: 16px;
            margin: 5px 0;
        }

        .quantity {
            color: #555;
            margin-bottom: 12px;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 12px;
        }

        .btn {
            text-decoration: none;
            padding: 7px 12px;
            border-radius: 6px;
            color: white;
            font-size: 14px;
        }

        .btn.edit {
            background: #2196F3;
        }

        .btn.delete {
            background: #f44336;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .product-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .product-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

